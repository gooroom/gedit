+					      NULL);
 }
 
 void
@@ -122,6 +126,7 @@ gedit_dirs_shutdown ()
 	g_clear_pointer (&gedit_locale_dir, g_free);
 	g_clear_pointer (&gedit_lib_dir, g_free);
 	g_clear_pointer (&gedit_plugins_dir, g_free);
